# Debian preseed configuration for automated installation
d-i debian-installer/locale string en_US
d-i debian-installer/language string en
d-i debian-installer/country string US
d-i keyboard-configuration/xkb-keymap select us
d-i console-setup/ask_detect boolean false
d-i console-keymaps-at/keymap select us

# Aggressive CD-ROM detection bypass and preseed loading
d-i cdrom-detect/load_media boolean false
d-i cdrom-detect/try-usb boolean false
d-i cdrom-detect/manual boolean true
d-i hw-detect/load_firmware boolean false
d-i anna/choose_modules string 
d-i rescue/enable boolean false
d-i preseed/interactive boolean false
d-i debconf/frontend select noninteractive
d-i debconf/priority select critical
d-i preseed/url string
d-i preseed/file string /cdrom/preseed.cfg

# Network configuration
{% if vm_use_static_ip | default(false) | bool %}
# Static IP configuration
d-i netcfg/choose_interface select auto
d-i netcfg/disable_autoconfig boolean true
d-i netcfg/get_ipaddress string {{ vm_static_ip }}
d-i netcfg/get_netmask string 255.255.255.0
d-i netcfg/get_gateway string 10.0.42.1
d-i netcfg/get_nameservers string 10.0.42.1
d-i netcfg/confirm_static boolean true
d-i netcfg/get_hostname string {{ vm_hostname | default('debian-vm') }}
{% if vm_fqdn %}
d-i netcfg/get_domain string {{ vm_fqdn | regex_replace('^[^.]+\.', '') }}
{% else %}
d-i netcfg/get_domain string ank.com
{% endif %}
{% else %}
# DHCP configuration
d-i netcfg/choose_interface select auto
d-i netcfg/get_hostname string {{ vm_hostname | default('debian-vm') }}
{% if vm_fqdn %}
d-i netcfg/get_domain string {{ vm_fqdn | regex_replace('^[^.]+\.', '') }}
{% else %}
d-i netcfg/get_domain string ank.com
{% endif %}
{% endif %}

# Mirror settings
d-i mirror/country string manual
d-i mirror/http/hostname string deb.debian.org
d-i mirror/http/directory string /debian
d-i mirror/http/proxy string

# Skip APT setup if media issues occur
d-i apt-setup/use_mirror boolean true
d-i apt-setup/cdrom/set-first boolean false
d-i apt-setup/cdrom/set-next boolean false
d-i apt-setup/cdrom/set-failed boolean false
d-i apt-setup/disable-cdrom-entries boolean true

# Account setup - SSH key authentication will be configured in late_command
d-i passwd/root-login boolean true
d-i passwd/root-password-crypted password $6$rounds=656000$YQKwJWpJX8rTzQEr$8bP.qH0Qj/156S1nNp0fUhNFv.T6LSnqGC1yvqjN3MEH4km8jLHWHXU1AB1B5fC6TYV5ewQRjy3VaEd8V2r1N.
d-i passwd/user-fullname string Debian User  
d-i passwd/username string debian
d-i passwd/user-password-crypted password $6$rounds=656000$YQKwJWpJX8rTzQEr$8bP.qH0Qj/156S1nNp0fUhNFv.T6LSnqGC1yvqjN3MEH4km8jLHWHXU1AB1B5fC6TYV5ewQRjy3VaEd8V2r1N.

# Clock and time zone setup
d-i clock-setup/utc boolean true
d-i time/zone string UTC
d-i clock-setup/ntp boolean true

# Partitioning
d-i partman-auto/method string regular
d-i partman-auto/choose_recipe select atomic
d-i partman-partitioning/confirm_write_new_label boolean true
d-i partman/choose_partition select finish
d-i partman/confirm boolean true
d-i partman/confirm_nooverwrite boolean true

# Base system installation
d-i base-installer/install-recommends boolean false
d-i base-installer/kernel/image string linux-image-amd64

# Package selection
tasksel tasksel/first multiselect standard, ssh-server
d-i pkgsel/include string openssh-server curl wget vim net-tools qemu-guest-agent
d-i pkgsel/upgrade select full-upgrade
popularity-contest popularity-contest/participate boolean false

# Boot loader installation
d-i grub-installer/only_debian boolean true
d-i grub-installer/with_other_os boolean true
d-i grub-installer/bootdev string default
d-i grub-installer/force-efi-extra-removable boolean true

# Finish installation
d-i finish-install/reboot_in_progress note

# Late commands to configure SSH keys and security
d-i preseed/late_command string \
    in-target systemctl enable ssh; \
    in-target systemctl enable qemu-guest-agent; \
    in-target sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config; \
    in-target sed -i 's/#PubkeyAuthentication yes/PubkeyAuthentication yes/' /etc/ssh/sshd_config; \
    in-target sed -i 's/#AuthorizedKeysFile/AuthorizedKeysFile/' /etc/ssh/sshd_config; \
    in-target sed -i 's/#PasswordAuthentication yes/PasswordAuthentication no/' /etc/ssh/sshd_config; \
    in-target mkdir -p /root/.ssh; \
    in-target chmod 700 /root/.ssh; \
    in-target mkdir -p /home/debian/.ssh; \
    in-target chmod 700 /home/debian/.ssh; \
    in-target chown debian:debian /home/debian/.ssh; \
    echo 'ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIGzApaFouD2cXAihkjbt09fLQnCX3k9wZ2c7sN/sVtbF kevin@kevins-Mac-mini.local' > /target/root/.ssh/authorized_keys; \
    echo 'ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIGzApaFouD2cXAihkjbt09fLQnCX3k9wZ2c7sN/sVtbF kevin@kevins-Mac-mini.local' > /target/home/debian/.ssh/authorized_keys; \
    in-target chmod 600 /root/.ssh/authorized_keys; \
    in-target chmod 600 /home/debian/.ssh/authorized_keys; \
    in-target chown debian:debian /home/debian/.ssh/authorized_keys{% if vm_use_static_ip | default(false) | bool %}; \
    echo 'auto lo' > /target/etc/network/interfaces; \
    echo 'iface lo inet loopback' >> /target/etc/network/interfaces; \
    echo '' >> /target/etc/network/interfaces; \
    echo 'auto ens18' >> /target/etc/network/interfaces; \
    echo 'iface ens18 inet static' >> /target/etc/network/interfaces; \
    echo '  address {{ vm_static_ip }}' >> /target/etc/network/interfaces; \
    echo '  netmask 255.255.255.0' >> /target/etc/network/interfaces; \
    echo '  gateway 10.0.42.1' >> /target/etc/network/interfaces; \
    echo '  dns-nameservers 10.0.42.1' >> /target/etc/network/interfaces{% endif %}